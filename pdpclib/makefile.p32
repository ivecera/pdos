# This is the makefile for Win32 to build pdpclib using
# the gcc compiler, and using custom-built Windows tools
# and for static linking. Use with pdmake etc.

CC=gccwin
COPTS=-S -fno-common -ansi -O2 -D__WIN32__ -D__STATIC__ -D__NOBIVA__ -I . -I../src

all: pdptest.exe

pdptest.exe: p32start.o pdptest.o stdio.o string.o stdlib.o \
       start.o time.o errno.o assert.o signal.o locale.o \
       ctype.o setjmp.o math.o __memmgr.o winsupc.obj
  rm -f pdpwin32.a
  ar r pdpwin32.a p32start.o stdio.o string.o stdlib.o winsupc.obj
  ar r pdpwin32.a start.o time.o errno.o assert.o signal.o
  ar r pdpwin32.a locale.o ctype.o setjmp.o math.o __memmgr.o
  ar s pdpwin32.a
  pdld -s -o pdptest.exe p32start.o pdptest.o pdpwin32.a ../src/kernel32.a

.c.o:
  $(CC) $(COPTS) -o $*.s $<
  pdas --oformat coff -o $@ $*.s
  rm -f $*.s

.asm.obj:
  pdas --oformat coff -o $@ $<

clean:
  rm -f *.o
  rm -f pdptest.exe
